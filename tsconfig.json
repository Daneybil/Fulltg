{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "noEmitOnError": false,
    "jsx": "react-jsx"
  },
  "include": ["server.ts", "src/**/*"],
  "exclude": ["node_modules"]
}
